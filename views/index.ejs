
    <%- include("partials/header.ejs") %>
    <div class="container d-flex flex-column">

        <div class="container text_posted_container overflow-auto w-55">
            <% if (locals.textPosted) { %>

                <h1 class="sticky-top bg-white title"> Hoje </h1>
                
                <div class="text-array-div" text-array= "<%= textPosted%>"> </div>

                <% textPosted.forEach(text => { %>
                    <div class="container text_posted  p-2 d-flex justify-content-between align-items-start" >
                        <p class="mb-0"> <%= text %> </p>
                        <form action="/delete" method="POST">
                        <button class="btn delete-btn text-danger"><svg class="trash-icon" xmlns="http://www.w3.org/2000/svg" width="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                          </svg></button>
                        </form>
                    </div>
                    
                <% }); %>
                
                <% } else { %>
                    <h1>Olá</h1>
        
                    <p class="subtitle">Como foi o seu dia? Escreva algo abaixo para começar. ✍️</p>

                    <% } %>
        </div>

        <div class="container row justify-content-center">
            <form action="/limpar" method="POST">
                <button class="btn btn-outline-danger btn-limpar" type="submit">Limpar</button>
            </form>
        </div>
        
        <div class="container text-container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <form id="message-form" action="/submit" method="POST">  
                        <div class="d-flex mt-3">
                            <textarea name="message" placeholder="Escrever..." id="message floatingTextarea" class="form-control text-area fs-6 pt-1 pb-0 border-light-subtle shadow-sm"></textarea>
                            <button class="btn bg-dark text-bg-dark btn-outline-secondary btn-enviar">Enviar</button>
                        </div>
                    </form>
                 </div>
            </div>
        </div> 
    </div>
    <%- include("partials/footer.ejs") %>
    